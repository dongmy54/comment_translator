{
  "name": "code-comment-translator",
  "displayName": "Code Comment Translator",
  "description": "Translate code comments from English to Chinese",
  "version": "0.1.11",
  "publisher": "dmy",
  "repository": {
    "type": "git",
    "url": "https://github.com/dongmy54/comment_translator.git"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "enabledApiProposals": [
    "editorInsets"
  ],
  "categories": [
      "Programming Languages",
      "Linters",
      "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-comment-translator.translate",
        "title": "Translate Comment"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "code-comment-translator.translate",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "code-comment-translator.translate",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Code Comment Translator",
      "properties": {
        "codeCommentTranslator.apiType": {
          "type": "string",
          "default": "deepseek",
          "enum": ["deepseek", "openrouter"],
          "description": "API 类型 (deepseek 或 openrouter)"
        },
        "codeCommentTranslator.deepseekApiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API Key",
          "if": {
            "properties": {
              "codeCommentTranslator.apiType": { "const": "deepseek" }
            }
          }
        },
        "codeCommentTranslator.openrouterApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API Key",
          "if": {
            "properties": {
              "codeCommentTranslator.apiType": { "const": "openrouter" }
            }
          }
        },
        "codeCommentTranslator.openrouterModel": {
          "type": "string",
          "default": "google/gemini-2.0-flash-exp:free",
          "description": "OpenRouter Model 名称",
          "if": {
            "properties": {
              "codeCommentTranslator.apiType": { "const": "openrouter" }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
